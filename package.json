{
  "name": "clawpurse",
  "version": "2.0.0",
  "description": "Local Timpi/NTMPI wallet for agentic AI, automation, and individuals",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "clawpurse": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node --esm src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "bash tests/e2e/cli-tests.sh",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist/",
    "pretest": "npm run type-check",
    "security-check": "npm audit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhue-ai/ClawPurse.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mhue-ai/ClawPurse/issues"
  },
  "homepage": "https://github.com/mhue-ai/ClawPurse#readme",
  "dependencies": {
    "@cosmjs/amino": "^0.38.1",
    "@cosmjs/crypto": "^0.38.1",
    "@cosmjs/proto-signing": "^0.38.1",
    "@cosmjs/stargate": "^0.38.1",
    "@cosmjs/tendermint-rpc": "^0.38.1",
    "bech32": "^2.0.0",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.4",
    "enquirer": "^2.4.1",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.1",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
